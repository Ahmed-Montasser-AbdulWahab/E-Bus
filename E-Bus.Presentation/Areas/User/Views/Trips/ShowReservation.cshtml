@model ReservationResponse
@{
    ViewBag.Title = "Successful Registration";
}
<div class="flexColumn bordering center-page p-4">
    <p class="title">Reservation Details</p>

    @{
        await Html.RenderPartialAsync(partialViewName: "_ReservationPartialView", model: Model);
    }


    @await Component.InvokeAsync("QR", Model)

    <div class="flexRow center-page">
        <a class="btn btn-outline-success" asp-controller="Trips" asp-action="ShowPdf" asp-route-TripId="@Model.TheTripResponse.Id" asp-route-UserId="@Model.TheUserDTO.UserId" asp-area="user" role="button">Print</a>
        @if (DateTime.Now.CompareTo(Convert.ToDateTime(Model.TheTripResponse.DepartureTime).AddDays(-1)) <= 0)
        {
            <form method="post" asp-controller="Trips" asp-action="DeleteReservation" asp-route-TripId="@Model.TheTripResponse.Id" asp-route-UserId="@Model.TheUserDTO.UserId" asp-area="user">
                <input type="hidden" name="DepartureTime" value="@Model.TheTripResponse.DepartureTime"/>
                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
        }
        <a class="btn btn-outline-dark" asp-area="user" asp-controller="Trips" asp-action="MyReservations" role="button">Go to My Reservations</a>
        <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index" role="button">Go to Home</a>
    </div>
</div>


